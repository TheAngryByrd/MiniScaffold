{
    "author": "Jimmy Byrd",
    "classifications": [
        "Scaffold"
    ],
    "name": "MiniScaffold",
    "tags": {
        "language": "F#"
    },
    "identity": "MiniScaffold",
    "shortName": "mini-scaffold",
    "sourceName": "MyLib.1",
    // This allows using the `-n` option to create a new directory
    "preferNameDirectory": true,
    "symbols": {
        "githubUsername": {
            "type": "parameter",
            "replaces": "MyGithubUsername"
        },
        "outputType": {
            "type": "parameter",
            "dataType": "choice",
            "defaultValue": "library",
            "choices": [
                {
                    "choice": "library",
                    "description": "Creates a template for library projects"
                },
                {
                    "choice": "console",
                    "description": "Creates a template for console projects"
                }
            ]
        }
    },
    "sources": [
        {
            "source": "./Library/",
            "target": "./",
            "condition": "(outputType == \"library\")",
        },
        {
            "source": "./Console/",
            "target": "./",
            "condition": "(outputType == \"console\")",
        }
    ],
    "postActions": [
        {
            "condition": "(OS != \"Windows_NT\")",
            "description": "Make scripts executable",
            "manualInstructions": [
                {
                    "text": "Run 'chmod +x *.sh'"
                }
            ],
            "actionId": "cb9a6cf3-4f5c-4860-b9d2-03a574959774",
            "args": {
                "+x": "*.sh"
            },
            "continueOnError": true
        }
    ]
}
